<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">
  
  <style>
    body {
      font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
      text-align: center;
      padding: 40px 0;
      background: linear-gradient(45deg, #3498db, #2ecc71);
      color: #ffffff;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .card {
      background: rgba(255, 255, 255, 0.9);
      padding: 40px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      width: 100%;
      text-align: center;
      opacity: 0;
      animation: fadeIn 1s ease-in-out 0.5s forwards;
    }

    h1 {
      color: #2c3e50;
      font-weight: 900;
      font-size: 40px;
      margin-bottom: 10px;
    }

    p {
      color: #34495e;
      font-size: 20px;
      margin: 0;
    }

    i.checkmark {
      color: #27ae60;
      font-size: 80px; /* Adjusted size */
      line-height: 160px; /* Adjusted size */
      margin-bottom: 20px;
    }

    .btn {
      background-color: #27ae60;
      color: white;
      font-size: 18px; /* Adjusted size */
      padding: 10px 20px; /* Adjusted padding */
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-decoration: none;
      display: inline-block;
      margin: 10px; /* Adjusted margin */
    }

    .btn:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    @media (max-width: 600px) {
      .card {
        padding: 20px;
      }

      h1 {
        font-size: 32px;
      }

      p {
        font-size: 16px;
      }

      .btn {
        font-size: 16px; /* Adjusted size */
        padding: 8px 16px; /* Adjusted padding */
        margin: 5px; /* Adjusted margin */
      }

      i.checkmark {
        font-size: 60px; /* Adjusted size */
        line-height: 120px; /* Adjusted size */
      }
    }
  </style>
</head>
<body>
  <div class="card">
    <div style="border-radius: 50%; height: 160px; width: 160px; background: #F8FAF5; margin: 0 auto;">
      <i class="checkmark">âœ“</i>
    </div>
    <h1>Success</h1>
    <p>Your order has been successfully placed</p>

    <!-- Styled buttons section -->
    <div style="display: flex; flex-wrap: wrap; justify-content: center; margin-top: 20px;">
      <a href="/" class="btn">Continue Shopping</a>
      <button class="btn" onclick="downloadInvoice('<%= orderfind._id %>')">Download Invoice</button>  
      <a href="/profile" class="btn">Go to Orders</a>
    </div>
  </div>

  <!-- Optional: Add JavaScript for additional interactivity -->
  <script>
    function downloadInvoice(orderId) {
      alert(orderId)
        try {
            // Fetch the invoice using GET request with the provided order ID
            fetch(`/invoice/${orderId}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/pdf' // Assuming the response is a PDF file
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to download invoice');
                }
                return response.blob();
            })
            .then(blob => {
                const url = window.URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.href = url;
                link.download = 'invoice.pdf'; // Specify the default file name for download
                link.style.display = 'none';
                document.body.appendChild(link);
    
                link.click();
    
                // Clean up
                setTimeout(() => {
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(link);
                }, 100);
            })
            .catch(error => {
                console.error('Error:', error);
                // Handle error (e.g., display a message to the user)
            });
        } catch (error) {
            console.error('Error:', error);
            // Handle error (e.g., display a message to the user)
        }
    }
    
    </script>
</body>
</html>
