    <!-- Fontawesome css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/font-awesome.css">

    <!-- Themify icon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/themify.css">

    <!--Dropzon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/dropzone.css">

    <!-- Feather icon css-->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/feather-icon.css">

    <!-- remixicon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/remixicon.css">

    <!-- Select2 css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/select2.min.css">

    <!-- Plugins css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/chartist.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/date-picker.css">

    <!-- Bootstrap css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/bootstrap.css">

    <!-- Bootstrap-tag input css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/bootstrap-tagsinput.css">

    <!-- App css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/style.css">
    <!-- Custom CSS for the description box -->
    <style>
        textarea.form-control {
            height: 100px;
            resize: vertical;
        }

        .alert-message {
            color: red;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>

   <!-- tap on top start -->
   <div class="tap-top">
    <span class="lnr lnr-chevron-up"></span>
</div>
<!-- tap on tap end -->

<!-- page-wrapper Start-->
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    <%- include('../partials/header.ejs')%>
    <!-- Page Header Ends-->

    <!-- Page Body Start -->
    <div class="page-body-wrapper">
    <!-- sidebar start -->
   
        <%- include('../partials/sidebar.ejs')%>
        <!-- Page Sidebar Ends-->

<div class="page-body">
                <!-- Edit Coupon Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-header-2">
                                                <h5>Edit Coupon</h5>
                                            </div>

                                            <form class="theme-form theme-form-2 mega-form" action="/admin/editCoupon?id=<%= coupon._id %>" method="post" onsubmit="return validateForm()">
                                                <% if (alertMessage) { %>
                                                <div id="alert" class="alert-message ">
                                                    <%= alertMessage %>
                                                </div>
                                                <script>
                                                    document.addEventListener('input', function(event) {
                                                        var alertDiv = document.getElementById('alert');
                                                        if (alertDiv) {
                                                            alertDiv.style.display = 'none';
                                                        }
                                                    });
                                                </script>
                                                <% } %>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Coupon Code</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="text" placeholder="Coupon Code" name="code" id="code" value="<%= coupon.code %>" readonly>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Description</label>
                                                    <div class="col-sm-9">
                                                        <textarea class="form-control" placeholder="Description" name="description" id="description"><%= coupon.description %></textarea>
                                                        <p id="description-error" class="alert-message"></p>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Discount Percentage</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="number" placeholder="Discount Percentage" name="discountPercentage" id="discountPercentage" value="<%= coupon.discountPercentage %>">
                                                        <p id="discountPercentage-error" class="alert-message"></p>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Max Discount Amount</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="number" placeholder="Max Discount Amount" name="maxDiscountAmount" id="maxDiscountAmount" value="<%= coupon.maxDiscountAmount %>">
                                                        <p id="maxDiscountAmount-error" class="alert-message"></p>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Min Amount</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="number" placeholder="Min Amount" name="minAmount" id="minAmount" value="<%= coupon.minAmount %>">
                                                        <p id="minAmount-error" class="alert-message"></p>
                                                    </div>
                                                </div>

                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Expiry Date</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="date" placeholder="Expiry Date" name="expiryDate" id="expiryDate" value="<%= coupon.expiryDate %>">
                                                        <p id="expiryDate-error" class="alert-message"></p>
                                                    </div>
                                                </div>

                                                <!-- New Submit Button -->
                                                <div class="mb-4 row align-items-center">
                                                    <div class="col-sm-9 offset-sm-3 d-flex justify-content-center align-items-center">
                                                        <!-- Center the content -->
                                                        <button type="submit" class="btn btn-primary">Update Coupon</button>
                                                    </div>
                                                </div>
                                            </form>

                                            <script>
                                                function validateForm() {
                                                    var description = document.getElementById("description").value.trim();
                                                    var discountPercentage = document.getElementById("discountPercentage").value.trim();
                                                    var maxDiscountAmount = document.getElementById("maxDiscountAmount").value.trim();
                                                    var minAmount = document.getElementById("minAmount").value.trim();
                                                    var expiryDate = document.getElementById("expiryDate").value.trim();
                                                    var errorMessage = "";

                                                    if (description === "") {
                                                        errorMessage += "Description is required.\n";
                                                        document.getElementById("description-error").innerText = "Description is required.";
                                                    } else {
                                                        document.getElementById("description-error").innerText = "";
                                                    }

                                                    if (discountPercentage === "") {
                                                        errorMessage += "Discount Percentage is required.\n";
                                                        document.getElementById("discountPercentage-error").innerText = "Discount Percentage is required.";
                                                    } else {
                                                        document.getElementById("discountPercentage-error").innerText = "";
                                                    }

                                                    if (maxDiscountAmount === "") {
                                                        errorMessage += "Max Discount Amount is required.\n";
                                                        document.getElementById("maxDiscountAmount-error").innerText = "Max Discount Amount is required.";
                                                    } else {
                                                        document.getElementById("maxDiscountAmount-error").innerText = "";
                                                    }

                                                    if (minAmount === "") {
                                                        errorMessage += "Min Amount is required.\n";
                                                        document.getElementById("minAmount-error").innerText = "Min Amount is required.";
                                                    } else {
                                                        document.getElementById("minAmount-error").innerText = "";
                                                    }

                                                   

                                                    if (errorMessage !== "") {
                                                        return false;
                                                    }

                                                    return true;
                                                }
                                            </script>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Edit Coupon End -->

                <!-- footer Start -->
                <div class="container-fluid">
                    <footer class="footer">
                        <div class="row">
                            <div class="col-md-12 footer-copyright text-center">
                                <p class="mb-0">Copyright 2022 © Fastkart theme by pixelstrap</p>
                            </div>
                        </div>
                    </footer>
                </div>
                <!-- footer End -->
            </div>
            <!-- Container-fluid End -->
        </div>
        <!-- Page Body End -->
    </div>
    <!-- page-wrapper End -->

    <!-- Modal Start -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="modal-title" id="staticBackdropLabel">Logging Out</h5>
                    <p>Are you sure you want to log out?</p>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                    <div class="button-box">
                        <button type="button" class="btn btn--no" data-bs-dismiss="modal">No</button>
                        <button type="button" class="btn  btn--yes btn-primary">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->

    <!-- latest js -->
    <script src="/assetss/js/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap js -->
    <script src="/assetss/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- feather icon js -->
    <script src="/assetss/js/icons/feather-icon/feather.min.js"></script>
    <script src="/assetss/js/icons/feather-icon/feather-icon.js"></script>

    <!-- scrollbar simplebar js -->
    <script src="/assetss/js/scrollbar/simplebar.js"></script>
    <script src="/assetss/js/scrollbar/custom.js"></script>

    <!-- Sidebar js -->
    <script src="/assetss/js/config.js"></script>

    <!-- bootstrap tag-input js -->
    <script src="/assetss/js/bootstrap-tagsinput.min.js"></script>
    <script src="/assetss/js/sidebar-menu.js"></script>

    <!-- customizer js -->
    <script src="/assetss/js/customizer.js"></script>

    <!--Dropzon js -->
    <script src="/assetss/js/dropzone/dropzone.js"></script>
    <script src="/assetss/js/dropzone/dropzone-script.js"></script>

    <!-- Plugins js -->
    <script src="/assetss/js/notify/bootstrap-notify.min.js"></script>
    <script src="/assetss/js/notify/index.js"></script>

    <!-- select2 js -->
    <script src="/assetss/js/select2.min.js"></script>
    <script src="/assetss/js/select2-custom.js"></script>

    <!-- sidebar effect -->
    <script src="/assetss/js/sidebareffect.js"></script>

    <!-- Theme js -->
    <script src="/assetss/js/script.js"></script>

</body>

</html>
