<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <!-- Meta data -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Fastkart admin is super flexible, powerful, clean &amp; modern responsive bootstrap 5 admin template with unlimited possibilities.">
    <meta name="keywords"
        content="admin template, Fastkart admin template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="pixelstrap">
    <link rel="icon" href="/assetss/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="/assetss/images/favicon.png" type="image/x-icon">
    <title>Edit Product Offer</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap"
        rel="stylesheet">

    <!-- Linear Icon css -->
    <link rel="stylesheet" href="/assetss/css/linearicon.css">

    <!-- Fontawesome css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/font-awesome.css">

    <!-- Themify icon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/themify.css">

    <!--Dropzon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/dropzone.css">

    <!-- Feather icon css-->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/feather-icon.css">

    <!-- remixicon css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/remixicon.css">

    <!-- Select2 css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/select2.min.css">

    <!-- Plugins css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/scrollbar.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/animate.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/chartist.css">
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/date-picker.css">

    <!-- Bootstrap css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/bootstrap.css">

    <!-- Bootstrap-tag input css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/vendors/bootstrap-tagsinput.css">

    <!-- App css -->
    <link rel="stylesheet" type="text/css" href="/assetss/css/style.css">
    <style>
        textarea.form-control {
            height: 100px;
            resize: vertical;
        }

        .error-message {
            color: red;
            margin-bottom: 10px;
        }

        .image-wrapper {
            position: relative;
            display: inline-block;
            margin-right: 10px;
        }

        .image-wrapper img {
            width: 90px;
            height: 90px;
            object-fit: cover;
            border-radius: 5px;
        }

        .remove-button {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: #ff6347;
            color: #fff;
            border: none;
            padding: 3px 5px;
            border-radius: 50%;
            cursor: pointer;
        }

        .remove-button:hover {
            background-color: #cc4c3c;
        }
    </style>
</head>

<body>
    <!-- tap on top start -->
    <div class="tap-top">
        <span class="lnr lnr-chevron-up"></span>
    </div>
    <!-- tap on tap end -->

    <!-- page-wrapper start -->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <!-- Page Header Start-->
        <%- include('../partials/header.ejs')%>
        <!-- Page Header Ends-->

        <!-- Page Body start -->
        <div class="page-body-wrapper">
            <!-- Page Sidebar Start-->
            <%- include('../partials/sidebar.ejs')%>
            <!-- Page Sidebar Ends-->

            <div class="page-body">

                <!-- Edit Product Offer Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-header-2">
                                                <h5>Edit Product Offer</h5>
                                            </div>
                                            <form class="theme-form theme-form-2 mega-form"
                                            action="/admin/editproductOffer?id=<%= productOffer._id %>" method="post"
                                            onsubmit="return validateForm()">
            
                                            <!-- Offer Name Input -->
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-3 col-form-label form-label-title">Offer Name</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="text" placeholder="Offer Name"
                                                        name="offerName" id="offerName" value="<%= productOffer.offerName %>"
                                                        >
                                                    <div class="error-message" id="offerName-error"></div>
                                                </div>
                                            </div>
            
                                            <!-- Product Dropdown -->
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-3 col-form-label form-label-title">Product</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="product" id="product" >
                                                        <option value="" selected>Select Product</option>
                                                        <% products.forEach(product => { %>
                                                        <option value="<%= product._id %>"
                                                            <%= product._id.toString() === productOffer.product.toString() ? 'selected' : '' %>>
                                                            <%= product.productname %></option>
                                                        <% }); %>
                                                    </select>
                                                    <div class="error-message" id="product-error"></div>
                                                </div>
                                            </div>
            
                                            <!-- Discount Percentage Input -->
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-3 col-form-label form-label-title">Discount Percentage</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="number" placeholder="Discount Percentage"
                                                        name="discountValue" id="discountValue"
                                                        value="<%= productOffer.discountValue %>" >
                                                    <div class="error-message" id="discountValue-error"></div>
                                                </div>
                                            </div>
            
                                            <!-- Start Date Input -->
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-3 col-form-label form-label-title">Start Date</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="date" placeholder="Start Date"
                                                        name="startDate" id="startDate" value="<%= productOffer.startDate %>"
                                                        >
                                                    <div class="error-message" id="startDate-error"></div>
                                                </div>
                                            </div>
            
                                            <!-- End Date Input -->
                                            <div class="mb-4 row align-items-center">
                                                <label class="col-sm-3 col-form-label form-label-title">End Date</label>
                                                <div class="col-sm-9">
                                                    <input class="form-control" type="date" placeholder="End Date" name="endDate"
                                                        id="endDate" value="<%= productOffer.endDate %>">
                                                    <div class="error-message" id="endDate-error"></div>
                                                </div>
                                            </div>
            
                                            <!-- Submit Button -->
                                            <div class="mb-4 row align-items-center">
                                                <div class="col-sm-9 offset-sm-3">
                                                    <button type="submit" class="btn btn-primary">Update Product Offer</button>
                                                </div>
                                            </div>
                                        </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Edit Product Offer End -->

                <!-- Footer -->
                <div class="container-fluid">
                    <footer class="footer">
                        <div class="row">
                            <div class="col-md-12 footer-copyright text-center">
                                <p class="mb-0">Copyright 2022 © Fastkart theme by pixelstrap</p>
                            </div>
                        </div>
                    </footer>
                </div>
                <!-- Footer End -->
            </div>
            <!-- Container-fluid End -->
        </div>
        <!-- Page Body End -->
    </div>
    <!-- Page Wrapper End -->
    <script>
        function validateForm() {
            var offerName = document.getElementById("offerName").value.trim();
            var product = document.getElementById("product").value.trim();
            var discountValue = document.getElementById("discountValue").value.trim();
            var startDate = document.getElementById("startDate").value.trim();
            var endDate = document.getElementById("endDate").value.trim();
            var errorMessage = "";
    
            if (offerName === "") {
                errorMessage += "Offer Name is required.\n";
                document.getElementById("offerName-error").innerText = "Offer Name is required.";
            } else {
                document.getElementById("offerName-error").innerText = "";
            }
    
            if (product === "") {
                errorMessage += "Product is required.\n";
                document.getElementById("product-error").innerText = "Product is required.";
            } else {
                document.getElementById("product-error").innerText = "";
            }
    
            if (discountValue === "") {
                errorMessage += "Discount Value is required.\n";
                document.getElementById("discountValue-error").innerText = "Discount Value is required.";
            } else if (parseFloat(discountValue) < 0) {
                errorMessage += "Discount Value cannot be negative.\n";
                document.getElementById("discountValue-error").innerText = "Discount Value cannot be negative.";
            } else {
                document.getElementById("discountValue-error").innerText = "";
            }
    
          
            if (errorMessage !== "") {
                return false;
            }
    
            return true;
        }
    </script>
    
    <!-- JavaScript -->
    <!-- jQuery -->
    <script src="/assetss/js/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/assetss/js/bootstrap/bootstrap.bundle.min.js"></script>
    <!-- Feather icon js -->
    <script src="/assetss/js/icons/feather-icon/feather.min.js"></script>
    <script src="/assetss/js/icons/feather-icon/feather-icon.js"></script>
    <!-- Scrollbar js -->
    <script src="/assetss/js/scrollbar/simplebar.js"></script>
    <script src="/assetss/js/scrollbar/custom.js"></script>
    <!-- Sidebar js -->
    <script src="/assetss/js/config.js"></script>
    <script src="/assetss/js/sidebar-menu.js"></script>
    <!-- Theme js -->
    <script src="/assetss/js/script.js"></script>
    <!-- Select2 js -->
    <script src="/assetss/js/select2.min.js"></script>
    <!-- Validation js -->
    <script src="/javascripts/editproductoffer.js"></script>
</body>

</html>
