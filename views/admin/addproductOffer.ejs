    <!-- Page Body Start -->
    <div class="page-body-wrapper">
    <!-- sidebar start -->
   
        <%- include('../partials/sidebar.ejs')%>
        <!-- Page Sidebar Ends-->

<div class="page-body">
                <!-- Add Product Offer Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-sm-8 m-auto">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-header-2">
                                                <h5>Add Product Offer</h5>
                                            </div>

                                            <form class="theme-form theme-form-2 mega-form" action="/admin/addproductoffer" method="post" onsubmit="return validateForm()">
                                                <% if (alertMessage) { %>
                                                <div id="alert" class="alert-message ">
                                                    <%= alertMessage %>
                                                </div>
                                                <script>
                                                    document.addEventListener('input', function(event) {
                                                        var alertDiv = document.getElementById('alert');
                                                        if (alertDiv) {
                                                            alertDiv.style.display = 'none';
                                                        }
                                                    });
                                                </script>
                                                <% } %>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Offer Name</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="text" placeholder="Offer Name" name="offerName" id="offerName">
                                                        <p id="offerName-error" class="alert-message"></p>
                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Product</label>
                                                    <div class="col-sm-9">
                                                        <!-- Populate product options dynamically -->
                                                        <select id="product" class="form-control" name="product" required>
                                                            <option value="" selected>Select Product </option>
                                                            <% products.forEach(product => { %>
                                                                <option value="<%= product._id %>"><%= product.productname %></option>
                                                            <% }); %>
                                                        </select><br><br>
                                                        <p id="product-error" class="alert-message"></p>
                                                    </div>
                                                </div>
                                                <!-- <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Discount Type</label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control" name="discountType" id="discountType">
                                                            <option value="fixed">Select discount Type</option>
                                                            <option value="percentage">Percentage</option>
                                                        </select>
                                                        <p id="discountType-error" class="alert-message"></p>
                                                    </div>
                                                </div> -->
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Discount Percentage</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="number" placeholder="Discount Value" name="discountValue" id="discountValue">
                                                        <p id="discountValue-error" class="alert-message"></p>
                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">Start Date</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="date" placeholder="Start Date" name="startDate" id="startDate">
                                                        <p id="startDate-error" class="alert-message"></p>
                                                    </div>
                                                </div>
                                                <div class="mb-4 row align-items-center">
                                                    <label class="form-label-title col-sm-3 mb-0">End Date</label>
                                                    <div class="col-sm-9">
                                                        <input class="form-control" type="date" placeholder="End Date" name="endDate" id="endDate">
                                                        <p id="endDate-error" class="alert-message"></p>
                                                    </div>
                                                </div>
                                                <!-- New Submit Button -->
                                                <div class="mb-4 row align-items-center">
                                                    <div class="col-sm-9 offset-sm-3 d-flex justify-content-center align-items-center">
                                                        <!-- Center the content -->
                                                        <button type="submit" class="btn btn-primary" onclick="return validateForm()">Add Product Offer</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
