                <!-- footer End -->
            </div>
            <!-- Container-fluid End -->
        </div>
        <!-- Page Body End -->
    </div>
    <!-- page-wrapper End -->
    <script>
        function validateForm() {
            var offerName = document.getElementById("offerName").value.trim();
            var product = document.getElementById("product").value.trim();
            var discountValue = document.getElementById("discountValue").value.trim();
            var startDate = document.getElementById("startDate").value.trim();
            var endDate = document.getElementById("endDate").value.trim();
    
            var errorMessage = "";
    
            // Validate Offer Name
            if (offerName === "") {
                errorMessage += "Offer Name is required.\n";
                document.getElementById("offerName-error").innerText = "Offer Name is required.";
            } else {
                document.getElementById("offerName-error").innerText = "";
            }
    
            // Validate Product
            if (product === "") {
                errorMessage += "Product is required.\n";
                document.getElementById("product-error").innerText = "Product is required.";
            } else {
                document.getElementById("product-error").innerText = "";
            }
    
            // Validate Discount Value
            if (discountValue === "") {
                errorMessage += "Discount Value is required.\n";
                document.getElementById("discountValue-error").innerText = "Discount Value is required.";
            } else if (isNaN(discountValue) || parseInt(discountValue) < 0) {
                errorMessage += "Discount Value must be a positive number.\n";
                document.getElementById("discountValue-error").innerText = "Discount Value must be a positive number.";
            } else {
                document.getElementById("discountValue-error").innerText = "";
            }
    
            // Validate Start Date
            if (startDate === "") {
                errorMessage += "Start Date is required.\n";
                document.getElementById("startDate-error").innerText = "Start Date is required.";
            } else {
                document.getElementById("startDate-error").innerText = "";
            }
    
            // Validate End Date
            if (endDate === "") {
                errorMessage += "End Date is required.\n";
                document.getElementById("endDate-error").innerText = "End Date is required.";
            } else {
                document.getElementById("endDate-error").innerText = "";
            }
    
            // Check if there are any errors
            if (errorMessage !== "") {
                return false; // Prevent form submission
            }
    
            return true; // Allow form submission
        }
    </script>
    
