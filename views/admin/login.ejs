<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Admin Login</h4>
                    <form id="loginForm" action="/admin/login" method="post" onsubmit="return validateForm()">
                        <% if (alertMessage) { %>
                            <div id="alert" class="alert-message">
                              <%= alertMessage %>
                            </div>
                            <script>
                              document.addEventListener('input', function (event) {
                                var alertDiv = document.getElementById('alert');
                                if (alertDiv) {
                                  alertDiv.style.display = 'none';
                                }
                              });
                            </script>
                        <% } %>
                        <div class="mb-3">
                            <input class="form-control" placeholder=" Email" type="text" name="email" id="email">
                        </div>
                        <div class="mb-3">
                            <input class="form-control" placeholder="Password" type="password" name="password" id="password">
                        </div>
                         <!-- Display error message here -->
                         <p id="form-error-message" class="text-danger"></p>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div>
                       
                    </form>
                </div>
            </div>
        </section>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Include your separate JavaScript file -->
    <script src="/javascripts/adminlogin.js" type="text/javascript"></script>
    <!-- Main Script -->
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>

